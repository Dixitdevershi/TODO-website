<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To do list</title>
  <link rel="stylesheet" href="style.css">
  
</head>

<body>
  
  <div class="box" id="heading">
    <h1>
      <%= kindofday %>
    </h1>
  </div>
  <div class="box">
    <%  newtasks.forEach(function(item){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" value="<%= item._id%>" name="checkbox" onchange="this.form.submit()">
          <p>
            <%= item.name %>
          </p>
        </div>
      </form>
      <%   })  %>
      

      

        <form action="/" method="post">
          <input type="text" name="task" placeholder="New Item">
          <button type="submit" name="btun" value="<%=kindofday %>">+</button>
        </form>

  </div>

</body>

</html>